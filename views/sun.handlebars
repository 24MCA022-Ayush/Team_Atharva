<style>
    .fade-in {
      opacity: 0;
      transform: translateY(20px);
      transition: opacity 1s ease-in-out, transform 1s ease-in-out;
    }

    .fade-in.show {
      opacity: 1;
      transform: translateY(0);
    }

    /* Pop animation */
    .pop {
      opacity: 0;
      transform: scale(0.9);
      transition: opacity 1s ease-in-out, transform 1s ease-in-out;
    }

    .pop.show {
      opacity: 1;
      transform: scale(1);
    }
  </style>
    <!-- JavaScript to detect when elements are in view and trigger animations -->
  <script>
    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          entry.target.classList.add('show');
        }
      });
    });

    // Apply observer to the fade-in and pop elements
    document.querySelectorAll('.fade-in, .pop').forEach((el) => observer.observe(el));
  </script>

