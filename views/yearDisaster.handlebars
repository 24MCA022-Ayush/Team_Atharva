  <script>
    // Script to handle Read More button functionality
    document.addEventListener("DOMContentLoaded", () => {
      const cards = document.querySelectorAll('.col-sm-6');

      cards.forEach((card, index) => {
        setTimeout(() => {
          card.classList.add('slide-in'); // Add slide-in class
        }, index * 300); // Adjust the delay (300ms) as needed
      });

      // Footer slide-in
      const footer = document.getElementById('footer');
      setTimeout(() => {
        footer.classList.add('show'); // Show footer with animation
      }, (cards.length + 1) * 300); // Delay based on number of cards

      document.querySelectorAll('.read-more').forEach(button => {
        button.addEventListener('click', () => {
          const description = button.nextElementSibling;
          description.classList.toggle('expanded'); // Toggle description visibility
        });
      });
    });

    // Get all the "Read More" buttons
    // Get all the "Read More" buttons
    const readMoreButtons = document.querySelectorAll('.read-more-btn');

    // Loop through each button and add an event listener
    readMoreButtons.forEach(button => {
      button.addEventListener('click', function () {
        // Toggle the visibility of the detailed text
        const card = button.closest('.card');
        const moreInfo = card.querySelector('.card-more-info');

        // Toggle the display of the details section
        if (moreInfo.style.display === "none" || moreInfo.style.display === "") {
          moreInfo.style.display = "block"; // Show details
          button.textContent = "Read Less"; // Change button text
        } else {
          moreInfo.style.display = "none"; // Hide details
          button.textContent = "Read More"; // Reset button text
        }
      });
    });

